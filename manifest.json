
{
  "manifest_version": 3,
  "name": "Doomscroll Shield",
  "version": "1.0",
  "description": "Blocks social media & roasts you when you try to doomscroll.",
   "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.twitter.com/*",
    "*://*.facebook.com/*",
    "*://*.youtube.com/*",
    "*://*.reddit.com/*",
    "*://*.linkedin.com/*",
    "*://*.pinterest.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "social_block",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "48": "icon.png"
  }
}